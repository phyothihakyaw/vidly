@model IEnumerable<Customer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Customers</h1>

<p>
    <a asp-action="New" class="btn btn-primary mb-2 mt-2">Add new customer</a>
</p>

@if (!Model.Any())
{
    <p>No customers added yet.</p>
}
else
{
    <table id="customers" class="table table-hover">
        <thead class="thead-light">
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.MembershipType.Name)
                </th>
                <th scope="col">
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MembershipType.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-link">
                            <i class="fas fa-user-edit" data-toggle="tooltip" data-placement="top" title="Edit user"></i>
                        </a> &nbsp; | &nbsp;
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-link">
                            <i class="fas fa-info-circle" data-toggle="tooltip" data-placement="top" title="Go to details"></i>
                        </a> &nbsp; | &nbsp;
                        <button data-customer-id="@item.Id" class="btn btn-link js-delete">
                            <i class="fas fa-trash" data-toggle="tooltip" data-placement="top" title="Delete customer"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();

            $('#customers').DataTable();

            $('#customers').on('click', '.js-delete', function () {
                var button = $(this);

                bootbox.confirm({
                    message: "Are you sure you want to delete this customer?",
                    buttons: {
                        confirm: {
                            label: 'Yes',
                            className: 'btn-danger'
                        },
                        cancel: {
                            label: 'No',
                            className: 'btn-success'
                        }
                    },
                    callback: function (result) {
                        if (result) {
                            $.ajax({
                                url: "/api/customers/" + button.attr('data-customer-id'),
                                method: "DELETE",
                                success: function () {
                                    button.parents('tr').remove();
                                }
                            })
                        };
                    }
                });
            });
        })
    </script>
}