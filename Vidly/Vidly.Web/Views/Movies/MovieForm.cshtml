@model Vidly.Web.ViewModels.MovieViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Movie Form</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="@((Model.Movie.Id == 0) ? "Add" : "Save")" asp-route-id="@((Model.Movie.Id == 0) ? 0 : Model.Movie.Id)">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Movie.Name"></label>
                <input type="text" asp-for="Movie.Name" class="form-control" />
                <span asp-validation-for="Movie.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.GenreId"></label>
                <select asp-for="Movie.GenreId" class="form-control" asp-items="Model.Genres">
                    <option value="">Select a genre</option>
                </select>
                <span asp-validation-for="Movie.GenreId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.NumberInStock"></label>
                <input type="number" asp-for="Movie.NumberInStock" class="form-control" min="1" max="20" />
                <span asp-validation-for="Movie.NumberInStock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.ReleasedDate"></label>
                <input type="date" asp-for="Movie.ReleasedDate" class="form-control" />
                <span asp-validation-for="Movie.ReleasedDate" class="text-danger"></span>
            </div>
            <div>
                <input type="hidden" asp-for="Movie.Id" />
            </div>
            <div class="form-group">
                <input type="submit" value="@((Model.Movie.Id == 0) ? "Add" : "Save")" class="btn btn-primary btn-lg btn-block" />
            </div>
        </form>
        <a asp-action="Index" class="btn btn-lg btn-block btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

